---
export interface Props {
  id: string;
  title: string;
  content?: string[];
  class?: string;
}

const { id, title, content, class: className } = Astro.props;
---

<section id={id} class=`mt-24 scroll-m-20 ${className}`>
  <h1 class="mb-6 flex items-center gap-2 text-3xl font-semibold">
    <slot name="icon" />{title}
  </h1>
  {
    content?.map((text) => (
      <p class="mb-2 text-pretty dark:text-gray-300">{text}</p>
    ))
  }
  <slot />
</section>
