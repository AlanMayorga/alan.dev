---
import { Image } from 'astro:assets';
import type { DataProyect } from "src/types";

export interface Props extends DataProyect {}

const { title, description, github, site, img } = Astro.props;
---

<div class="group relative block bg-black rounded-lg">
  <Image
    alt={title}
    src={`/assets/img/${img}`}
    width={240}
    height={308}
    class="absolute inset-0 h-full w-full object-cover opacity-75 transition-opacity group-hover:opacity-10 rounded-lg"
  />

  <div class="relative p-4 sm:p-6 lg:p-8">
    <div class="flex items-center justify-start gap-2 text-secondary">
      <a
        href={`https://github.com/AlanMayorga/${github}`}
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="icon icon-tabler icon-tabler-brand-github"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path
            d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
          ></path>
        </svg>
      </a>
      <a href={site} target="_blank" rel="noopener noreferrer">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="icon icon-tabler icon-tabler-world-www"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4"></path>
          <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4"></path>
          <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4"></path>
          <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4"
          ></path>
          <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4"></path>
          <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4"></path>
          <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4"></path>
          <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4"></path>
          <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4"></path>
        </svg>
      </a>
    </div>

    <p class="text-xl font-bold text-white sm:text-2xl">{title}</p>

    <div class="mt-12">
      <div
        class="translate-y-8 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100"
      >
        <p class="text-sm text-white">
          {description}
        </p>
      </div>
    </div>
  </div>
</div>
